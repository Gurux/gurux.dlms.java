<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gurux</groupId>
  <artifactId>gurux.dlms.simulator.java</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <properties>
    <maven.compiler.source>8</maven.compiler.source>
    <maven.compiler.target>1.8</maven.compiler.target>
  </properties>
  <build>
    <sourceDirectory>src</sourceDirectory>
    <plugins>
      <!-- Build an executable JAR -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>gurux.dlms.simulator.Simulator</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>org.gurux</groupId>
      <artifactId>gurux.serial</artifactId>
      <version>1.0.22</version>
    </dependency>
    <dependency>
      <groupId>org.gurux</groupId>
      <artifactId>gurux.net</artifactId>
      <version>1.0.22</version>
    </dependency>
    <dependency>
      <groupId>org.gurux</groupId>
      <artifactId>gurux.terminal</artifactId>
      <version>1.0.21</version>
    </dependency>
    <dependency>
      <groupId>org.gurux</groupId>
      <artifactId>gurux.dlms</artifactId>
      <version>4.0.81</version>
    </dependency>
  </dependencies>
  <licenses>
    <license>
      <name>GNU General Public License, version 2</name>
      <url>http://www.gnu.org/licenses/gpl-2.0.txt</url>
    </license>
  </licenses>
  <organization>
    <url>www.gurux.org</url>
    <name>Gurux Ltd.</name>
  </organization>
</project>